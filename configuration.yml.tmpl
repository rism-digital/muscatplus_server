    SOURCE_SUBJECTS: &SOURCE_SUBJECTS
      label: "records.subject_headings"
      alias: "subjects"
      type: "select"
      field: "subjects_sm"
      default_sort: "count"
    TEXT_LANGUAGE: &TEXT_LANGUAGE
